.activity-state {
    background:#1F1F1F !important;
}

#schedule-wrapper .poster-wrapper .poster {

    width: 100%;
    position: absolute;
    top: -15px;
    left: 0;
    padding: 10px 10px;
    transition: all .5s;
    opacity: 0;
    border-radius: 20px;
}

