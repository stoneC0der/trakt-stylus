}
/* Watching now */
.summary-activity .tabs .tab.selected {

    background-color: transparent!important;
    border-bottom-color: transparent!important;
    border-radius: 10px;
    -webkit-box-shadow: 0px 1px 10px 1px rgba(10,10,10,0.50)!important;
    box-shadow: 0px 1px 10px 1px rgba(10,10,10,0.50)!important;

}
.summary-activity .tabs .tab {

    float: left;
    width: 25%;
    border: none;
        border-bottom-color: rgb(225, 225, 225);
    color: #333;
    font-family: proxima nova;
    line-height: 1;
    padding: 10px 10px 8px;
    transition: all .5s;
    text-decoration: none;

}
/* Rating */
.fanart .corner-rating,
.poster > .corner-rating,
.poster.screenshot > .corner-rating{

    border-color: transparent!important;
    background-color: #ed1c24;
    box-shadow: 0px -1px 5px rgba(10, 10, 10, 0.5)!important;

}

.poster.screenshot > .corner-rating,
.poster > .corner-rating,
.fanart .corner-rating {

    width: 25px;
    height: 25px;
    border-style: solid;
    position: absolute;
    border-width: 1px;
    top: 0px;
    right: 0px;
    z-index: 10;
    border-radius: 50%;

}

.fanart .corner-rating .text,
.poster.screenshot > .corner-rating .text,
.poster > .corner-rating .text {

    color: #fff !important;
    font-size: 15px;
    font-family: proxima nova bold;
    position: absolute;
    top: 0px;
    right: 0px;
    width: 25px;
    height: 25px;
    text-align: center;
    line-height: 25px;
    transform: rotate(0deg);
    -webkit-transform: rotate(0deg);
    z-index: 15;

}

