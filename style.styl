/* Custom */

.posters .poster {
    box-shadow: 0px -1px 5px rgba(10, 10, 10, 0.5)!important;
    border: none!important;
    border-radius: 10px!important;
}

.posters {
   border-radius: 10px!important; 
}

.posters > div h3 {
    color: #ed1c24 !important;
}

